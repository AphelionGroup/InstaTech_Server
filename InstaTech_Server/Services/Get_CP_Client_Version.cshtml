@{
    if (File.Exists(Server.MapPath(InstaTech.App_Code.Config.Current.RC_Download_Paths["Windows 7"])))
    {
        var version = System.Diagnostics.FileVersionInfo.GetVersionInfo(Server.MapPath(InstaTech.App_Code.Config.Current.RC_Download_Paths["Windows 7"])).FileVersion.ToString();
        Response.Write(version);
    }
    else
    {
        Response.Write("0.0.0.0");
    }
}